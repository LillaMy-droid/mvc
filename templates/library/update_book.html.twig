{% extends 'base.html.twig' %}

{% block title %}Choose book{% endblock %}

{% block main %}
    <h1>Update Book</h1>

    <form action="{{ path('update_book_save', {Isbn: book.Isbn}) }}" method="POST">
        <label for="titel">Titel:</label>
        <input type="text" id="titel" name="titel" value="{{ book.titel }}" required><br>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="{{ book.author }}" required><br>

        <label for="Isbn">Isbn:</label>
        <input type="text" id="Isbn" name="Isbn" value="{{ book.Isbn }}" readonly><br>

        <button type="submit">Save Changes</button>
    </form>
{% endblock %}

